<% if @article.errors.any? %>
  <div class="ui negative message">
    <i class="exclamation circle"></i>
    <div class="header">
      <h3>The following errors prevented the article from being saved</h3>
    </div>
    <ul class="list">
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @article, local: true ) do |f| %>
<div class="ui form">
  <div class="field">
    <label><%= f.label :title %></label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label><%= f.label :description %></label>
    <%= f.text_area :description %>
  </div>
  <%= f.submit 'Post it!', :class => 'ui submit button large fluid' %>
</div>
<% end %>