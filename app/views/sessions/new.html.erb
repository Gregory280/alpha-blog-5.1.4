<div class="container">
  <div class="ui center aligned segment">
    <h1>Login</h1>
  </div>
  <div class="contentt">
    <%= form_with(scope: :session,  url: login_path, local: true) do |f| %>
    <div class="ui form">
      <div class="field">
        <label><%= f.label :email %></label>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Password' %>
      </div>
      <%= f.submit 'Login', :class => 'ui submit button large fluid' %>
    </div>
    <% end %>
  </div>
</div>