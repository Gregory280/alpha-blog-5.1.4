<% if obj.errors.any? %>
  <div class="ui negative message">
    <i class="exclamation circle"></i>
    <div class="header">
      <h3>The following errors prevented the <%= obj.class.name.downcase %> from being saved</h3>
    </div>
    <ul class="list">
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>